    let qtdPares = 0;
    let qtdImpares = 0;

    for (let i = 0; i < 10; i ++) {
        let a = +prompt("Insira um valor")
        if (a % 2 == 0) {
            qtdPares++
        } else {
            qtdImpares++
        }
    }
        
    console.log(`Pares: ${qtdPares}`)
    console.log(`Impares: ${qtdImpares}`)
</script>

