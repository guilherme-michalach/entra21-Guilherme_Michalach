"use strict"

let qtd = []
let amostra = []

for (let i = 0; i < 2; i++){

    if(i < 1) qtd[i] = prompt("Insira a palavra")
    
    if (i > 0) qtd[i] = +prompt("Insira o número de vezes que será repetido o elemento")

}

function isQuantity(elemento, qtd) {

    for (let i = 0; i < qtd; i++){
        amostra.push(elemento)
    }

}

isQuantity(qtd[0], qtd[1])

console.log(amostra)

