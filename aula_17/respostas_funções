function isArray () {
    console.log(`Primeiro número do Array: ${array[0]}`)
    console.log(`Último número do Array: ${array[array.length - 1]}`)
}

let array = []

while(true) {
    let numero = +prompt("Insira um número\nSe quiser parar a inserção, digite -12345") 

    if(numero == -12345) {
        break
    }

    array.push(numero)

}

isArray()

