"use strict"

let maior = 50
let menor = 50

function valorPontas() {

    for(let i = 0; i < 50; i++) {
        
        if(array[i] > maior) maior = array[i]

        if (array[i] < menor) menor = array[i]

    }

    console.log(`O maior número do array é ${maior} enquanto que o menor é ${menor}`)

}

