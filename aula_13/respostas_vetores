7)

let vetor = []
let vetorResult = []

for(let i = 0; i < 5; i++) {
    let numeros = +prompt("Insira um número")
    vetor[i] = numeros
    vetorResult[i] = vetor[i] * vetor[i]
}
console.log(vetor)
console.log(vetorResult)

8)

let vetor = []
let vetorReverso = []
let inversor = 5

for(let i = 0; i < 6; i++) {
    vetor[i] = +prompt("Insira um número par:")
    if(vetor[i] % 2 != 0) {
        alert("Valor inválido!!!")
        break
    }
    vetorReverso[inversor] = vetor[i]
    inversor--
}
console.log(vetor)
console.log(vetorReverso)

