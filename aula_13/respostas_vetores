let vetor = []
let vetor2 = []

for(let i = 0; i < 5; i++) {
    let valorV1 = +prompt("Insira um valor")
    vetor[i] = valorV1
}

for(let i = 0; i < 5; i++) {
    let valorV2 = +prompt("Insira um valor")
    vetor2[i] = valorV2
}

let bool = true

for(let i = 0; i < 5; i++) {
    if(vetor[i] != vetor2[i]) {
        bool = false
        break
    }
}

bool ? console.log("Os valores de ambos vetores são iguais") : console.log("Os valores de ambos vetores são diferentes")

