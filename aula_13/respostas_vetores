    if (x <= 7) {
        vetor[x]
    } else if (x < 0 || x > 8) {
        x = +prompt("Número X")
    }
    if (y <= 7) {
        vetor[y]
    } else if (y < 0 || y > 8) {
        y = +prompt("Número Y")
    }
} 

