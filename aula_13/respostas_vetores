3)

let teste = []
let maior = 0
let menor = 0

for (let i = 0; i < 5; i++) {
    teste[i] = +prompt(`Digite o ${i+1}° valor`)

    if (teste[i] > maior) {
        maior = teste[i]
        menor = teste[0]
    }
    if (teste[i] < menor) {
        menor = teste[i]
    }
}

console.log(`Maior número do vetor: ${maior}`)
console.log(`Menor número do vetor: ${menor}`)


4)

let vetor1 = []
let vetor2 = []
let teste = 4

for (let i = 0; i < 5; i++) {

    vetor1[i] = +prompt(`Informe o ${i + 1}° valor:`)
    vetor2[teste] = vetor1[i]
    teste--
}

console.log(vetor1, vetor2)

