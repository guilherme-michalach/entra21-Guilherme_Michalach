let vetor = []
let maior = 0
let menor = 0
let posicaoMenor = 0
let posicaoMaior = 0

for(let i = 0; i < 5; i++) {
    vetor[i] = +prompt("Insira um número")
    menor = vetor[0]
    maior = vetor[0]
    if(vetor[i] < menor) {
        menor = vetor[i]
        posicaoMenor = i
    }
    if(vetor[i] > maior) {
        maior = vetor[i]
        posicaoMaior = i
    }
}
console.log(`O índice do maior número é: ${posicaoMaior}`)
console.log(`O índice do menor número é: ${posicaoMenor}`)

