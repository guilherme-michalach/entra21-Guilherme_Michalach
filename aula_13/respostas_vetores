10)

let vetor = [];
let negativos = 0
let soma = 0
for (let i = 0; i < 10; i++) {
    vetor[i] = +prompt("Insira um número")
    if (vetor[i] < 0) {
        negativos++
    }
    if (vetor[i] >= 0) {
        soma += vetor[i]
    }
}
console.log(`Foram digitados ${negativos} números negativos.`)
console.log(`A soma dos valores positivos foi de: ${soma}`)

