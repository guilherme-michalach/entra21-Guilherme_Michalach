3)

let teste = []
let maior = 0
let menor = 0

for (let i = 0; i < 5; i++) {
    teste[i] = +prompt(`Digite o ${i+1}° valor`)

    if (teste[i] > maior) {
        maior = teste[i]
        menor = teste[0]
    }
    if (teste[i] < menor) {
        menor = teste[i]
    }
}

console.log(`Maior número do vetor: ${maior}`)
console.log(`Menor número do vetor: ${menor}`)


