1)

let matriz = []
let maiores = 0

for(let i = 0; i < 3; i++) {
    matriz[i] = []
    for(let j = 0; j < 3; j++) {
        matriz[i][j] = +prompt(`Insira um número na linha ${i + 1} e coluna ${j + 1}:`)
        if(matriz[i][j] > 10) {
            maiores++
        }
    }
}

console.log(`A matriz possui ${maiores} números maiores do que 10.`)

2)

let matriz = []
let maiores = 0
let amostraMatriz = ""

for(let i = 0; i < 5; i++) {
    matriz[i] = []
    for(let j = 0; j < 5; j++) {
        if(i == j) {
            amostraMatriz += matriz[i][j] = 1 + "\t"
        }
        if(i != j) {
            amostraMatriz += matriz[i][j] = 0 + "\t"
        }
    }
    amostraMatriz += "\n"
}

console.log(amostraMatriz)

Ou com ternário

let matriz = []
let amostraMatriz = ""

for(let i = 0; i < 5; i++) {
    matriz[i] = []
    for(let j = 0; j < 5; j++) {
        i == j ? matriz[i][j] = 1 : matriz[i][j] = 0
        amostraMatriz += matriz[i][j] + "\t"
    }
    amostraMatriz += "\n"
}

console.log(amostraMatriz)

