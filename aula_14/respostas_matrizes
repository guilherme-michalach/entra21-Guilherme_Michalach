    for(let j = 0; j < 3; j++) { 
        matriz[i][j] = +prompt(`Insira um valor na linha ${i + 1} da coluna ${j + 1}:`)
    }
}

let buscador = +prompt(`Insira o valor a ser buscado na matriz:`)

pesquisa:
for(let i = 0; i < 3; i++) {
    matriz[i]
    for(let j = 0; j < 3; j++) {
        if(buscador === matriz[i][j]) {
            valor = buscador
            buscador = true
            l1 = i
            c1 = j
            break pesquisa
        }      
    }
}

//talvez fazer tudo dentro do if de cima?
